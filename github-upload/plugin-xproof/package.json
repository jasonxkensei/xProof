{
  "name": "@elizaos/plugin-xproof",
  "version": "2.0.0",
  "description": "Compliance layer for autonomous agents. Audit guard blocks critical actions without on-chain proof. Certify outputs on MultiversX via xProof. 6-second finality.",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "lint": "tsc --noEmit"
  },
  "agentConfig": {
    "pluginType": "elizaos:plugin:1.0.0",
    "pluginParameters": {
      "XPROOF_API_KEY": {
        "type": "string",
        "description": "API key for xproof.app (pm_ prefix) â€” get one at https://xproof.app"
      },
      "XPROOF_BASE_URL": {
        "type": "string",
        "description": "Base URL for xProof API (default: https://xproof.app)"
      }
    }
  },
  "keywords": [
    "elizaos",
    "elizaos-plugins",
    "blockchain",
    "proof",
    "certification",
    "multiversx",
    "agents",
    "trust",
    "audit",
    "audit-log",
    "compliance",
    "agent-audit",
    "trust-primitive",
    "proof-of-existence",
    "mx-8004",
    "autonomous-agent"
  ],
  "author": "jasonxkensei",
  "license": "MIT",
  "homepage": "https://xproof.app",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jasonxkensei/plugin-xproof.git"
  },
  "bugs": {
    "url": "https://github.com/jasonxkensei/plugin-xproof/issues"
  },
  "engines": {
    "node": ">=18"
  },
  "peerDependencies": {
    "@elizaos/core": "*"
  },
  "devDependencies": {
    "@elizaos/core": "latest",
    "@types/node": "^22.0.0",
    "tsup": "^8.0.0",
    "typescript": "^5.0.0"
  }
}
